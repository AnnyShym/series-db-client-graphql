<!DOCTYPE html>
<html lang = "en">

	<head>
		<meta charset = "utf-8">
    <meta name = "viewport" content = "width=device-width, initial-scale=1.0">
		<title><%= database %> DB</title>
 		<link rel="shortcut icon" href="public/assets/film.ico" type="image/x-icon">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
			integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	</head>

	<body>
		<% if (errors) { %>
			<% for (let i = 0; i < errors.length; i++) { %>
				<div class="alert alert-danger"><%= errors[i].msg %></div>
			<% } %>
		<% } %>
    <form method="post" action="/<%= table %>/save" align="center">
      <div class="form-group">
        <label for="exampleFormControlInput1"><%= upCaseColumns[1] %>:</label>
        <input type="text" name="<%= columns[1] %>" <% if (rows && rows[i].title) { %> value="<%= rows[0].title.trim() %>" <% } %> class="form-control" id="exampleFormControlInput1" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1"><%= upCaseColumns[2] %>:</label>
				<select name="<%= columns[2] %>" class="form-control" id="exampleFormControlSelect1">
					<% for (let i = 0; i < countries.length; i++) { %>
						<% if (rows && countries[i] == rows[0].country) { %>
							<option selected value="<%= countries[i] %>"><%= countries[i] %></option>
						<% } else { %>
							<option value="<%= countries[i] %>"><%= countries[i] %></option>
						<% } %>
					<% } %>
				</select>
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1"><%= upCaseColumns[3] %>:</label>
        <textarea name="<%= columns[3] %>" class="form-control" id="exampleFormControlTextarea1" rows="3"><% if (rows && rows[0].description) { %><%= rows[0].description.trim() %><% } %></textarea>
      </div>
			<div class="form-group">
				<label for="exampleFormControlSelect1"><%= upCaseColumns[4] %>:</label>
				<select name="<%= columns[4] %>" class="form-control" id="exampleFormControlSelect1">
					<% for (let i = 0; i < ratingOptions.length; i++) { %>
						<% if (rows && ratingOptions[i] == rows[0].rating) { %>
							<option selected value="<%= ratingOptions[i] %>"><%= ratingOptions[i] %></option>
						<% } else { %>
							<option value="<%= ratingOptions[i] %>"><%= ratingOptions[i] %></option>
						<% } %>
					<% } %>
				</select>
			</div>
      <button type="submit" name="<%= operation %>" class="btn btn-success" align="center"><%= operation %></button>
    </form>
	</body>
